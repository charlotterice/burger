<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center" id="top-bar">
<h1>Burger</h1>
</div>
<div class="col-sm-6 text-center" class="task">
			<div class="row">
  {{#each burgers}}
  {{#unless this.devoured}}
  <div class="col-sm-9 text-center">
     <p>{{this.id}}. {{this.burger_name}}</p>
  </div>
  	<div class="col-sm-3 text-center">
					<form class="button-size devour-form">
						<input type="text" id="burger_id" value={{this.id}}>
<button type="submit" class="btn btn-default mt-1">Devour it!</button>
					</form>
</div>
 {{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-sm-6 text-center" class="task">
			  {{#each burger}}
			  	{{#if this.devoured}}
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-sm-12 text-center enter_section">
			<form action="/api/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="create-form">Submit</button>
			</form>
			<p>Enter a burger you want to eat Click the "Submit" button.</p>
		</div>
	</div>
</div>