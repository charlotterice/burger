<div class="container">
<h1>Burger</h1>
<hr>

<h2>Here are some burgers:</h2>
<hr>
<div class="row">
  <div class="col-6">
<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <li>
    <p>
      {{this.id}}. {{this.burger_name}}
      <button data-id="{{this.id}}" data-status =
    "{{devoured}}" class="devoured">Devour it!</button>
    </p>
  </li>
  {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-6">
  <h3>Devoured!</h3>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <li>
    <p>
      {{this.id}}. {{this.burger_name}}
    </p>
  </li>
  {{/if}}
  {{/each}}
</ul>
</div>
</div>

<div class="row">
  <div class="col-12">
<h3>Add a Burger</h3>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="bur" name="name">
  </div>

  <button type="submit">New Burger</button>
</form>
</div>
</div>
</div>